.page.page-frame#partenaires
  .frame
    input#partner-china(type='radio', name='partners', checked)
    input#partner-japan(type='radio', name='partners')
    input#partner-korea(type='radio', name='partners')
    .container-nations
      label.nation.china(for='partner-china') CHINE
      label.nation.japan(for='partner-japan') JAPON
      label.nation.korea(for='partner-korea') COREE<br>DU SUD
    .container-maps
      .wrapper-map.china
        include ../../img/partenaires/maps/china.svg
      .wrapper-map.japan
        include ../../img/partenaires/maps/japan.svg
      .wrapper-map.korea
        include ../../img/partenaires/maps/korea.svg
    .description.china
      | Nous travaillons avec des partenaires en Chine, dit l'Empire du Milieu.
    .description.japan
      | Nous travaillons avec des partenaires au Japon, dit le pays du Soleil Levant.
    .description.korea
      | Nous travaillons avec des partenaires en Cor√©e du Sud, dit le pays du Matin calme.
    include ../overlays/label-partenariat
    include ../overlays/image-logo
    include ../overlays/icon-menu
  .popup
    .deco-popup-arrow
    .container-image
      #image-city
      #label-city
  include ../overlays/labels